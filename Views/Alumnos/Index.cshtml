@model List<DemoJuntaViernes.Models.ViewModels.AlumnoViewModel>

<div class="container">
    <div class="d-flex justify-content-between border-bottom py-3">
        <h1 class="fs-3 fw-normal">Listado de Alumnos</h1>
        <a asp-action="Create" asp-controller="Alumnos" class="btn btn-primary">Agregar</a>
    </div>

    @if(Model.Count() >= 0)
    {
        <table class="table table-bordered table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th class="text-start">Nombre</th>
                    <th class="text-center">Apellido</th>
                    <th class="text-center">Edad</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var alumno in Model)
                {
                    <tr>
                        <td>@alumno.Nombre</td>
                        <td class="text-center">@alumno.Apellido</td>
                        <td class="text-center">@alumno.Edad</td>
                        <td class="text-center">
                            <button class="btn btn-outline-info me-3">Editar</button>
                            <button class="btn btn-danger">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-secondary fw-bolder text-center py-5">No hay registros</p>
    }
</div>